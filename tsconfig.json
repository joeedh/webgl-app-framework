{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "es6",
    "lib": ["dom", "scripthost", "es2017"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "declaration": false,
    "noEmit": true,
    "noImplicitThis": true,
    "listEmittedFiles": false,
    "outDir": "types",
  },
  "files": ["scripts/typescript_entry.ts"]
}
